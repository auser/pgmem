{
  "name": "@auser/pmem",
  "version": "0.1.6",
  "description": "",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "run-s build:package build:ts",
    "build:package": "cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "build:ts": "tsbb build --file-names src/index.ts --esm dist/esm --cjs dist",
    "postbuild:ts": "cp ./index.node dist/index.node && cp ./index.node dist/esm/index.node && rm ./index.node",
    "build-debug": "npm run build --",
    "build-release": "run-s build-release:*",
    "build-release:package": "npm run build:package -- --release",
    "build-release:ts": "npm run build:ts",
    "test": "mocha",
    "clean": "neon clean && rm -rf ./node_modules",
    "release": "run-s test release:version release:tags",
    "release:version": "standard-version",
    "release:tags": "git push && git push --tags"
  },
  "files": [
    "/dist"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "author": "Ari Lerner",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/jest": "^29.2.2",
    "cargo-cp-artifact": "^0.1.6",
    "chai": "^4.3.7",
    "husky": "^8.0.2",
    "mocha": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.8.0",
    "standard-version": "^9.5.0",
    "tsbb": "^3.7.8"
  }
}
